const newReviewForm = document.getElementById('new_review');
<% if @review.errors.any? %>
  newReviewForm.outerHTML = "<%= j render 'reviews/formreview', bike: @bike, review: @review %>";
<% else %>
  newReviewForm.outerHTML = "<%= j render 'reviews/formreview', bike: @bike, review: Review.new %>";
  if (reviews === undefined){
    const reviews = document.getElementById('reviews');
  }
  reviews.insertAdjacentHTML("beforeend", "<%= j render 'reviews/show', review: @review %>");
  if (typeof reviewContent === "undefined") {
    const counter = document.querySelector('#review')
  }
  reviewContent.value = '';
<% end %>


