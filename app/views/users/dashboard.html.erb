
<div class="container-dashboard">
  <div class ="profil-dashboard">
    <h1>Hello <%= @user.first_name %>,</h1>
    <div class="activities">
      <% if @user.avatar %>
        <%= cl_image_tag("donatien.png", class:"avatar-medium") %>
      <% else %>
        <%= link_to "Add a picture", root_path, class:"avatar-medium" %>
      <% end %>
      <p> <%= @reservations.count %>/<%= @bikes.count %> bikes are booked</p>
      <p>You are currently renting <%= @reservations_user.count %></p>
    </div>
  </div>
  <div class="action-dashboard">
    <div class="validation_resquest">
      <h2> No validation resquest for the moment</h2>
    </div>
    <div class="full-tabs">
      <ul class="nav nav-pills" role="tablist">
        <li class="active", role="presentation">
          <a data-toggle="tab" href="#mybikes" role="tab" aria-controls="mybikes">My bikes</a>
        </li>
        <li role="presentation">
          <a data-toggle="tab" href="#booking" role="tab" aria-controls="booking">Booking</a>
        </li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane active" id="mybikes" role="tabpanel" aria-labelledby="pills-home-tab">
          <% @reservations.each do |reservation| %>
            <div class="my-bike-card">
              <%= image_tag reservation.bike.photo.url(:bright_face), class: "photo-tabs" %>
              <div class="title-card">
                <p><%= reservation.bike.title %></p>
              </div>
              <div class="price-card">
                <p><%= reservation.bike.price_per_day %> €/day</p>
              </div>
              <div class="user-bike-card">
                <h6>User:</h6>
                <% user_id = reservation.user_id %>
                <p><%= User.find(user_id).email %></p>
              </div>
              <div class="date-card">
                <p><%= reservation.starts_at.strftime("%F") %></p>
                <p><%= reservation.ends_at.strftime("%F") %></p>
              </div>
            </div>
          <% end %>
        </div>
        <div class="tab-pane" id="booking" role="tabpanel" aria-labelledby="pills-profile-tab">
          <% @reservations_user.each do |reservation_user| %>
            <div class="my-bike-card">
              <%= image_tag reservation_user.bike.photo.url(:bright_face) %>
              <div class="title-card">
                <p><%= reservation_user.bike[:title] %></p>
              </div>
              <div class="price-card">
                <p><%= reservation_user.bike[:price_per_day] %> €/day</p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

