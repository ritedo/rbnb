<div class="index-container">
  <div class="card-container">
    <div class="class index-white-box">

      <div class="form-post">
        <form action="/bikes" class="form-stuff">
          <div class="form-group">
            <!-- <label class="control-label check_boxes optional">Equipment</label> -->
            <input type="hidden" name="post[category_ids][]" value="">
            <div class="category-choices">
              <input type="checkbox" class="hidden" name="bike[bell]" id="bell">
              <label for="bell" class="category-choice">Bell <i class="fa fa-check"></i></label>
              <input type="checkbox" class="hidden" name="bike[lights]" id="lights">
              <label for="lights" class="category-choice">Lights <i class="fa fa-check"></i></label>
              <input type="checkbox" class="hidden" name="bike[pump]" id="pump">
              <label for="pump" class="category-choice">Pump <i class="fa fa-check"></i></label>
              <input type="checkbox" class="hidden" name="bike[child_seat]" id="child_seat">
              <label for="child_seat" class="category-choice">Child seat <i class="fa fa-check"></i></label>
              <input type="checkbox" class="hidden" name="bike[padlock]" id="padlock">
              <label for="padlock" class="category-choice">Padlock <i class="fa fa-check"></i></label>
              <input type="checkbox" class="hidden" name="bike[helmet]" id="helmet">
              <label for="helmet" class="category-choice">Helmet <i class="fa fa-check"></i></label>
              <input type="checkbox" class="hidden" name="bike[basket]" id="basket">
              <label for="basket" class="category-choice">Basket <i class="fa fa-check"></i></label>
              <div class="category-choice-blank"></div>
            </div>
          </div>
          <input type="submit" class="btn btn-primary" value="Save"></input>
        </form>
      </div>

    </div>
    <div class="row">
      <% @bikes.each do |bike| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.4)), url('<%= cl_image_path bike.photo, height: 300, width: 400, crop: :fill %>')">
          <div class="card-category"><%= bike.address %></div>
          <div class="card-price"><p><%= bike.price_per_day %> â‚¬</p></div>
          <div class="card-description">
            <h2><%= bike.title %></h2>
          </div>
          <%= cl_image_tag bike.user.avatar.url, class: "card-user" %>
          <%= link_to "", bike_path(bike), class: "card-link" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <div id="map" data-markers="<%= @markers.to_json %>" class='map-index'></div>
</div>
