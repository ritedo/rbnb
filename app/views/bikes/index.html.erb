<h1>Choose your bike!</h1>
<div class="container">
  <div class="row">
    <% @bikes.each do |bike| %>
      <div class="col-xs-12 col-sm-4 card-shadow">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.3)), url('<%= cl_image_path bike.photo, height: 300, width: 400, crop: :fill %>')">
        <div class="card-category"><%= bike.address %></div>
        <div class="card-price"><p><%= bike.price_per_day %> â‚¬</p></div>
        <div class="card-description">
          <h2><%= bike.title %></h2>
          <p><%= bike.description %></p>
        </div>
        <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
        <%= link_to "", bike_path(bike), class: "card-link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
