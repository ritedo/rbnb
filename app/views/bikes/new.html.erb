<div class="container">
  <h1>Add your bike to rent</h1>
  <%= simple_form_for @bike do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :address %>
    <%= f.input :price_per_day %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.submit "add this bike", class: "btn btn-primary" %>
  <% end %>
</div>
