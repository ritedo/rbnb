<div class="container">
  <div class="bike_new_subcontainer">
    <div class="col-sm-12">
      <div class="form-new-bike">
        <h1 align="center">Add your bike to rent</h1>
        <%= simple_form_for @bike do |f| %>
          <%= f.input :title, placeholder: 'Racing bicycle for hipster'%>
          <%= f.input :description, placeholder: '2 year old blue racing bicycle'%>
          <%= f.input :address, placeholder: '16 villa gaudelet 75011 paris'%>
          <%= f.input :price_per_day, placeholder: '16'%>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.submit "Add this bike", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
